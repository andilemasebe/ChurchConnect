export default {
  "name": "Event",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Event title"
    },
    "description": {
      "type": "string",
      "description": "Event description"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "bible_study",
        "outreach",
        "special_service",
        "prayer_meeting",
        "youth_event",
        "children_event",
        "conference",
        "retreat",
        "workshop",
        "fellowship",
        "other"
      ],
      "description": "Type of event"
    },
    "event_date": {
      "type": "string",
      "format": "date",
      "description": "Event date"
    },
    "start_time": {
      "type": "string",
      "description": "Start time (e.g., 09:00 AM)"
    },
    "end_time": {
      "type": "string",
      "description": "End time (e.g., 11:00 AM)"
    },
    "location": {
      "type": "string",
      "description": "Event location"
    },
    "capacity": {
      "type": "number",
      "description": "Maximum number of attendees"
    },
    "rsvp_enabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether RSVP is enabled"
    },
    "rsvp_count": {
      "type": "number",
      "default": 0,
      "description": "Number of people who RSVP'd"
    },
    "organizer": {
      "type": "string",
      "description": "Event organizer name"
    },
    "ministry_id": {
      "type": "string",
      "description": "Associated ministry ID"
    },
    "image_url": {
      "type": "string",
      "description": "Event image"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Whether event is active"
    }
  },
  "required": [
    "title",
    "event_date",
    "start_time",
    "location"
  ]
}